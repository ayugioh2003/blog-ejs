<% extend('../layout/dashboard-layout.ejs') %>

<div class="main container-fluid my-4">
  <% if (hasInfo) { %>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="alert alert-info" role="alert">
        <%= messages %>
      </div>
    </div>
  </div>
  <% } %>
  <!--  -->
  <div class="row justify-content-center">
    <div class="col-md-6">
      <table class="table" id="categoriesTable">
        <thead>
          <tr>
            <th>名稱</th>
            <th>路徑</th>
            <th width="30"></th>
            <th width="110"></th>
          </tr>
        </thead>
        <tbody>
          <% for (var prop in categories) { %>
          <tr class="disabled" data-id="<%= categories[prop].id %>">
            <td class="align-middle">
              <input
                type="text"
                class="form-control form-control-sm"
                name="name"
                value="<%- categories[prop].name %>"
              />
            </td>
            <td>
              <input
                type="text"
                class="form-control form-control-sm"
                name="path"
                value="<%- categories[prop].path %>"
              />
            </td>
            <td class="align-middle">
              <form
                method="POST"
                action="/dashboard/categories/delete/<%- categories[prop].id %>"
              >
                <button type="submit" class="btn btn-outline-danger btn-sm">
                  刪除
                </button>
              </form>
            </td>
            <td class="align-middle">
              <form
                method="POST"
                action="/dashboard/categories/update/<%- categories[prop].id %>"
              >
                <button class="btn btn-outline-primary btn-sm btn-edit">
                  <!-- 編輯 -->
                </button>
                <button type="submit" class="btn btn-primary btn-sm btn-update">
                  更新
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <form method="POST" action="/dashboard/categories/create">
        <table class="table">
          <tr>
            <td class="align-middle">新增</td>
            <td>
              <label for="name">分類名稱</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="請輸入分類名稱"
              />
            </td>
            <td colspan="2">
              <label for="path">路徑</label>
              <input
                type="text"
                class="form-control"
                id="path"
                name="path"
                placeholder="請輸入分類路徑"
              />
            </td>
          </tr>
        </table>
        <div class="text-right">
          <button type="submit" class="btn btn-primary">新增資訊</button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  /* input 無法編輯 */
  /* https://stackoverflow.com/questions/11180177/can-one-disable-an-input-field-by-pure-css */
  tr.disabled input {
    pointer-events: none;
    border: 1px solid grey;
    background-color: lightgrey;
  }

  /* 編輯按鈕 */
  tr.disabled .btn-edit:before {
    content: '編輯';
  }
  tr:not(.disabled) .btn-edit:before {
    content: '取消';
  }

  /* 更新只有在沒有 disabled 時才會出現 */
  tr.disabled .btn-update {
    display: none;
  }

</style>

<script>
  const categoriesTable = document.querySelector('#categoriesTable')

  categoriesTable.addEventListener('click', (e) => {
    // 編輯狀態切換
    if (e.target.classList.contains('btn-edit')) {
      e.preventDefault()
      const tr = e.target.parentNode.parentNode.parentNode
      console.log('id', tr.dataset.id)

      // 從反灰色變白色
      if (tr.classList.contains('disabled')) {
        tr.dataset.name = tr.querySelector('input[name="name"]').value
        tr.dataset.path = tr.querySelector('input[name="path"]').value
        // e.target.textContent = '取消'
      }
      // 從白色變反灰
      if (!tr.classList.contains('disabled')) {
        tr.querySelector('input[name="name"]').value = tr.dataset.name
        tr.querySelector('input[name="path"]').value =  tr.dataset.path
        // e.target.textContent = '編輯'
      }
      tr.classList.toggle('disabled')
    }

    // 更新
    if (e.target.classList.contains('btn-update')) {
      e.preventDefault()
      const tr = e.target.parentNode.parentNode.parentNode
      console.log('id', tr.dataset.id)

      tr.classList.toggle('disabled')
      const name = tr.querySelector('input[name="name"]').value
      const path = tr.querySelector('input[name="path"]').value
      const id = tr.dataset.id
      // const action = tr.classList.contains('disabled') ? 'delete' : 'update'
      const action = 'update'
      console.log(action, id, name, path)

      fetch(`/dashboard/categories/${action}/${id}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          name,
          path,
        }),
      })
        .then((response) => {
          console.log('response', response)
          if (response.status === 200) {
            console.log('success')
            window.location.reload()
          } else {
            console.log('fail')
          }
        })
        .catch((error) => {
          console.log(error)
        })
    }
  })
</script>
