<% extend('../layout/dashboard-layout.ejs', { moduleType: 'userModule' }) %>

<div class="main container-fluid my-4">
  <% if (hasInfo) { %>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="alert alert-info" role="alert">
        <%= messages %>
      </div>
    </div>
  </div>
  <% } %>
  <!--  -->
  <div class="row justify-content-center">
    <div class="col-md-10">
      <table class="table" id="categoriesTable">
        <thead>
          <tr>
            <th>信箱</th>
            <th>名稱</th>
            <th>備註</th>
            <th>角色</th>
            <th width="110"></th>
            <th width="30"></th>
          </tr>
        </thead>
        <tbody>
          <% for (var prop in users) { %>
          <tr class="disabled" data-id="<%= users[prop].uid %>">
            <td class="align-middle">
              <input
                type="text"
                class="form-control form-control-sm"
                name="email"
                value="<%- users[prop].email %>"
                disabled
              />
            </td>
            <td class="align-middle">
              <input
                type="text"
                class="form-control form-control-sm"
                name="display_name"
                value="<%- users[prop].display_name %>"
              />
            </td>
            <td>
              <input
                type="text"
                class="form-control form-control-sm"
                name="note"
                value="<%- users[prop].note %>"
              />
            </td>
            <td class="align-middle">
              <select name="role" id="role" <% if (roles[users[prop].role].name !== 'admin') { %> disabled <% } %> >
                <option value=""> -- 請選擇-- </option>
                <% for (var role of Object.values(roles)) { %>
                  <option 
                    value="<%= role.id %>" <% if (users[prop].role === role.id) { %>selected<% } %>
                  >
                    <%= role.name %>
                  </option>
                <% } %> 
              </select>
            </td>
            <td class="align-middle">
              <form
                method="POST"
                action="/dashboard/currentUser/update/<%- users[prop].uid %>"
              >
                <button type="submit" class="btn btn-primary btn-sm btn-update">
                  更新
                </button>

                <button class="btn btn-outline-primary btn-sm btn-edit">
                  <!-- 編輯 -->
                </button>

                <input
                  hidden
                  type="text"
                  class="form-control form-control-sm"
                  name="display_name"
                  value="<%- users[prop].display_name %>"
                />
                <input
                  hidden
                  type="text"
                  class="form-control form-control-sm"
                  name="note"
                  value="<%- users[prop].note %>"
                />
                <input
                  hidden
                  type="text"
                  class="form-control form-control-sm"
                  name="role"
                  value="<%- users[prop].role %>"
                >
              </form>
            </td>
            <!-- <td class="align-middle">
              <form
                method="POST"
                action="/dashboard/users/delete/<%# users[prop].uid %>"
              >
                <button type="submit" class="btn btn-outline-danger btn-sm">
                  刪除
                </button>
              </form>
            </td> -->
          </tr>
          <% } %>
        </tbody>
      </table>

      <!-- <form method="POST" action="/dashboard/categories/create">
