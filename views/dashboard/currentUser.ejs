        </table>
        <div class="text-right">
          <button type="submit" class="btn btn-primary">新增資訊</button>
        </div>
      </form> -->
    </div>
  </div>
</div>

<style>
  /* input 無法編輯 */
  /* https://stackoverflow.com/questions/11180177/can-one-disable-an-input-field-by-pure-css */
  tr.disabled input,
  tr.disabled textarea,
  tr.disabled select {
    pointer-events: none;
    border: 1px solid grey;
    background-color: lightgrey;
  }

  /* 編輯按鈕 */
  tr.disabled .btn-edit:before {
    content: '編輯';
  }
  tr:not(.disabled) .btn-edit:before {
    content: '取消';
  }

  /* 更新只有在沒有 disabled 時才會出現 */
  tr.disabled .btn-update {
    /* display: none; */
    visibility: hidden;
  }
</style>

<script>
  const categoriesTable = document.querySelector('#categoriesTable')

  categoriesTable.addEventListener('click', (e) => {
    // 編輯狀態切換
    if (e.target.classList.contains('btn-edit')) {
      e.preventDefault()
      const tr = e.target.parentNode.parentNode.parentNode
      console.log('id', tr.dataset.id)


      // 從反灰色變白色
      if (tr.classList.contains('disabled')) {
        tr.dataset.display_name = tr.querySelector('input[name="display_name"]').value
        tr.dataset.note = tr.querySelector('input[name="note"]').value
        tr.dataset.role = tr.querySelector('select[name="role"]').value
        // e.target.textContent = '取消'
      }
      // 從白色變反灰
      if (!tr.classList.contains('disabled')) {
        tr.querySelector('input[name="display_name"]').value = tr.dataset.display_name
        tr.querySelector('input[name="note"]').value = tr.dataset.note
        tr.querySelector('select[name="role"]').value = tr.dataset.role
        // e.target.textContent = '編輯'
      }
      tr.classList.toggle('disabled')
    }

    // 更新
    if (e.target.classList.contains('btn-update')) {
      // e.preventDefault()
      const tr = e.target.parentNode.parentNode.parentNode
      const td = e.target.parentNode.parentNode
      console.log('id', tr.dataset.id)

      tr.classList.toggle('disabled')
      const display_name = tr.querySelector('input[name="display_name"]').value
      const note = tr.querySelector('input[name="note"]').value
      const role = tr.querySelector('select[name="role"]').value
      const id = tr.dataset.id

      const display_nameInput = td.querySelector('input[name="display_name"]')
      const noteInput = td.querySelector('input[name="note"]')
      const roleInput = td.querySelector('input[name="role"]')
      console.log(display_nameInput)

      display_nameInput.value = display_name
      noteInput.value = note
      roleInput.value = role

      console.log('name input', tr.querySelector('input[name="display_name"]'))
      console.log('display_nameInput', display_nameInput)
    }
  })
</script>
